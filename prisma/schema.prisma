// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id        String   @id @default(cuid())
  title     String   @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ratings   Rating[]
  recommenders User[] @relation("RecommendedMovies")

  @@map("movies")
}

model User {
  id        String   @id @default(cuid())
  name      String
  icon      String   // emoji 圖示
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ratings   Rating[]
  recommendedMovies Movie[] @relation("RecommendedMovies")

  @@unique([name])
  @@map("users")
}

model Rating {
  id        String   @id @default(cuid())
  movieId   String
  userId    String
  rating    Int?     // 1-5 星評分（可選，回覆可能沒有評分）
  review    String?  // 評語（可選）
  parentId  String?  // 父評論 ID（如果是回覆）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    Rating?  @relation("RatingReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Rating[] @relation("RatingReplies")

  @@index([movieId])
  @@index([userId])
  @@index([rating])
  @@index([createdAt])
  @@index([parentId])
  @@map("ratings")
}

model Notification {
  id          String   @id @default(cuid())
  type        String   // "movie_create", "rating_create", "rating_update", "reply_create", "user_create", "user_update", "movie_update"
  message     String   // 通知訊息
  entityId    String?  // 相關實體 ID（電影、評分、用戶等）
  entityType  String?  // 實體類型（"movie", "rating", "user"）
  metadata    Json?    // 額外的元數據（JSON 格式）
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@index([type])
  @@map("notifications")
}
